{
	"compilerOptions": {
		"target": "esnext",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"importHelpers": true,
		"isolatedModules": true,
		"noEmit": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"paths": {
			"@/*": ["src/*"],
		},
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"],
}
